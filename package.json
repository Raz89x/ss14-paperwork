{
  "name": "ss14-paperwork",
  "version": "1.1.0",
  "displayName": "SS14 Paperwork",
  "description": "Assists in creating paperwork for Space Station 14",
  "author": "Raz89",
  "publisher": "Raz89",
  "license": "MS-PL",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Formatters",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ss14paper",
    "onLanguage:plaintext"
  ],
  "main": "./extension.js",
  "icon": "src/media/icon/logo.png",
  "contributes": {
    "languages": [{
      "id": "ss14paper",
      "aliases": ["SS14 Paperwork", "Space Station 14 Paper"],
      "extensions": [".ss14doc", ".paper", ".paperwork"],
      "configuration": "./src/language/configuration.json"
    }],
    "grammars": [
      {
        "language": "ss14paper",
        "scopeName": "text.ss14paper",
        "path": "./src/language/syntax.json"
      }
    ],
    "commands": [
      {
        "command": "textRenderer.showPreview",
        "title": "SS14 Paperwork Renderer Preview"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "vscode": "^1.1.37"
  }
}
